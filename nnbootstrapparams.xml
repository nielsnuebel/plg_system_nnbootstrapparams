    <version>3.0.1</version>
    <description>PLG_SYSTEM_NNBOOTSTRAPPARAMS_XML_DESCRIPTION</description>
    <files>
        <file plugin="nnbootstrapparams">nnbootstrapparams.php</file>
        <filename>index.html</filename>
        <folder>params</folder>
        <folder>library</folder>
    </files>
    <languages>
        <language tag="en-GB">en-GB.plg_system_nnbootstrapparams.ini</language>
        <language tag="en-GB">en-GB.plg_system_nnbootstrapparams.sys.ini</language>
        <language tag="de-DE">de-DE.plg_system_nnbootstrapparams.ini</language>
        <language tag="de-DE">de-DE.plg_system_nnbootstrapparams.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="exludeposition" type="text"
                       description="Which module position's to exlude from your changes (top,left,sidebar)"
                       label="Exlude Module Position's"
                       default="sidebar-a,sidebar-b,sidebar"
                        >
                </field>
                <field  name="add_default_col_global"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="PLG_SYSTEM_NNBOOTSTRAPPARAMS_ADD_DEFAULT_COL_GLOBAL_LABEL"
                        description="PLG_SYSTEM_NNBOOTSTRAPPARAMS_ADD_DEFAULT_COL_GLOBAL_DESC"
                        >
                    <option value="1">add</option>
                    <option value="0">not set</option>
                </field>
                <field  name="add_margin"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="PLG_SYSTEM_NNBOOTSTRAPPARAMS_ADD_DEFAULT_COL_GLOBAL_LABEL"
                        description="PLG_SYSTEM_NNBOOTSTRAPPARAMS_ADD_DEFAULT_COL_GLOBAL_DESC"
                        >
                    <option value="1">add</option>
                    <option value="0">not set</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>